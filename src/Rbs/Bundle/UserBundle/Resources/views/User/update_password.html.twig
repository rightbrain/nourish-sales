{% extends 'base.html.twig' %}

{% block title %}{{ parent() }} : User update password {% endblock %}

{% block body %}

            {{ form_start(form, {'method': 'POST', 'attr': {'id': 'form-user-add', 'class': 'form-horizontal'}}) }}

            <div class="alert alert-error {% if not form.vars.errors|length %} hide {% endif %}">
                <button class="close" data-dismiss="alert"></button>
                You have some form errors. Please check below.
                {{ form_errors(form) }}
            </div>

            <div class="portlet box green">
                <div class="portlet-title">
                    <div class="caption">
                        <i class="icon-user"></i>User Form
                    </div>
                </div>
                <div class="portlet-body form">
                    <!-- BEGIN FORM-->
                        <div class="form-body">

                            <div class="form-group">
                                <label for="{{ form.plainPassword.first.vars.id }}" class="col-md-3 control-label required">
                                    Password <span class="required">*</span>
                                </label>
                                <div class="col-md-6">
                                    <div class="input-icon right">
                                        <i class="icon-lock"></i>
                                        {{ form_widget(form.plainPassword.first, {'attr': { 'class': 'form-control span6 m-wrap', 'data-required': '1', 'autocomplete' : 'off' , 'autofill' : 'off' }}) }}
                                        <span class="help-inline">{{ form_errors(form.plainPassword.first) }}</span>
                                    </div>
                                </div>
                            </div>

                            <div class="form-group">
                                <label for="{{ form.plainPassword.second.vars.id }}" class="col-md-3 control-label required">
                                    Confirm Password <span class="required">*</span>
                                </label>
                                <div class="col-md-6">
                                    <div class="input-icon right">
                                        <i class="icon-lock"></i>
                                        {{ form_widget(form.plainPassword.second, {'attr': { 'class': 'form-control span6 m-wrap', 'data-required': '1' }}) }}
                                        <span class="help-inline">{{ form_errors(form.plainPassword.second) }}</span>
                                    </div>
                                </div>
                            </div>

                        </div>

                    <!-- END FORM-->
                </div>
            </div>

            {{ form_end(form) }}

{% endblock %}

