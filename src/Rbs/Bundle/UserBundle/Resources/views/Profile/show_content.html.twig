<div class="col-md-12">
    <div class="portlet box blue">
        <div class="portlet-title">
            <div class="caption">
                My Profile
            </div>
        </div>

        <div class="portlet-body">
            {{ include('_elements/_back_to_list_button.html.twig', {url: path('homepage'), label: 'Back to Home', 'icon': 'chevron-left'}) }}
            <div class="dataTables_wrapper no-footer">

                <div class="row">
                    <div class="col-md-12">

                        <div class="portlet">
                            <div class="portlet-body">
                                <table class="table">
                                    <tr>
                                        <th colspan="4"><h4>User Profile Information</h4></th>
                                    </tr>
                                    <tr>
                                        <th>Name</th>
                                        <td>{{ user.profile.fullname | default('') }}</td>
                                        <th>Cellphone</th>
                                        <td>{{ user.profile.cellphone | default('') }}</td>
                                    </tr>
                                    <tr>
                                        <th>Designation</th>
                                        <td>{{ user.profile.designation | default('') }}</td>
                                        <th>User Type</th>
                                        <td>{{ user.userType | default('') }}</td>
                                    </tr>
                                    <tr>
                                        <th>Address</th>
                                        <td>{{ user.profile.address | default('') }}</td>
                                        <th></th>
                                        <td></td>
                                    </tr>
                                </table>
                            </div>
                        </div>
                        {% if not is_granted('ROLE_AGENT') %}
                        <div class="portlet">
                            <div class="portlet-body">
                                <table class="table">
                                    <tr>
                                        <th colspan="2">
                                            <h4>User Login Information</h4>
                                        </th>
                                    </tr>
                                    <tr>
                                        <th>Username</th>
                                        <td>{{ user.username }}</td>
                                    </tr>
                                    <tr>
                                        <th>Email</th>
                                        <td>{{ user.email }}</td>
                                    </tr>
                                    <tr>
                                        <th><a href="{{ path('my_password_update') }}" class="btn blue">Password Change</a></th>
                                        <td></td>
                                    </tr>
                                </table>
                            </div>
                        </div>
                        {% endif %}
                    </div>
                </div>
            </div>
        </div>

        <div class="footer">

        </div>

    </div>
</div>