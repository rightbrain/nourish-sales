<table>
    <thead>
    <tr>
        <th>SL</th>
        <th>Name</th>
        <th>Description</th>
    </tr>
    </thead>
    <tbody>
    {% for group in groups %}
        <tr>
            <td>{{ loop.index }}</td>
            <td>{{ group.getName() }}</td>
            <td>{{ group.getDescription() }}</td>
            <td><a href="{{ path('fos_user_group_show', {'groupName': group.getName()} ) }}">{{ group.getName() }}</a></td>
        </tr>
    {% endfor %}
    </tbody>
</table>
