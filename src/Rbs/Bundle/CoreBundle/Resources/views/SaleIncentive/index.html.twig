{% extends '::base.html.twig' %}

{% block title %}{{ parent() }} : Sale Incentives {% endblock %}

{% block body %}

    <div class="col-md-12">
        <div class="portlet box blue">
            <div class="portlet-title">
                <div class="caption">
                    <i class="fa fa-list"></i>Sale Incentives
                </div>
            </div>
            <div class="portlet-body">
                    <div class="dataTables_wrapper no-footer">

                        <div class="col-md-12">
                            <div class="portlet-title">
                                <div class="caption" style="font-weight: bolder;">Month</div>
                            </div>
                        </div>
                        {% if saleIncentiveA|length > 0  %}

                        {% set i = 0 %}
                        {% for index, saleIncentives in saleIncentiveA %}

                            <div class="col-md-12">
                                <div class="portlet-title">
                                    <div class="caption">

                                        {% for groupName in groupMonth[i] %}
                                            {{ groupName }} /
                                        {% endfor %}
                                    </div>
                                </div>

                                <table class="table table-bordered table-striped">
                                    <tbody>
                                        <tr>
                                            {% for group in saleIncentives %}
                                                <td class="col-md-1 bold">{{ group['quantity'] }}</td>
                                            {% endfor %}
                                        </tr>
                                        <tr>
                                            {% for group in saleIncentives %}
                                                <td class="col-md-1 bold">{{ group['amount'] }}</td>
                                            {% endfor %}
                                        </tr>
                                    </tbody>
                                </table>
                            </div>
                            {% set i = i + 1 %}
                        {% endfor %}

                        {% endif %}

                        <div class="col-md-12">
                            <div class="portlet-title">
                                <div class="caption" style="font-weight: bolder;">Year</div>
                            </div>
                        </div>

                        {% if saleIncentiveB|length > 0  %}

                        {% set j = 0 %}
                            {% for index, saleIncentives in saleIncentiveB %}

                            <div class="col-md-12">
                                <div class="portlet-title">
                                    <div class="caption">

                                        {% for groupName in groupYear[j] %}
                                            {{ groupName }} /
                                        {% endfor %}
                                    </div>
                                </div>

                                <table class="table table-bordered table-striped">
                                    <tbody>
                                        <tr>
                                            {% for group in saleIncentives %}
                                                <td class="col-md-1 bold">{{ group['quantity'] }}</td>
                                            {% endfor %}
                                        </tr>
                                        <tr>
                                            {% for group in saleIncentives %}
                                                <td class="col-md-1 bold">{{ group['amount'] }}</td>
                                            {% endfor %}
                                        </tr>
                                    </tbody>
                                </table>
                            </div>
                            {% set j = j + 1 %}
                        {% endfor %}

                        {% endif %}

                    <div style="clear: both"></div>
                </div>
            </div>
        </div>
    </div>
    <div style="clear: both"></div>
{% endblock %}


