{% extends '::base.html.twig' %}

{% block body -%}
    <div class="col-md-12">
        <div class="portlet box blue">
            <div class="portlet-title">
                <div class="caption">
                    <i class="fa fa-globe"></i>Add Category
                </div>
            </div>
            <div class="portlet-body">
                {{ include('_elements/_back_to_list_button.html.twig', {url: path('area'), label: 'Back to List', 'icon': 'plus'}) }}
                {{ form(form) }}
            </div>
        </div>
    </div>
    <div class="clearfix"></div>
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    {% javascripts
    'bundles/rbscore/js/area.js'
    output='js/compiled/all.js' %}
    <script src="{{ asset_url }}"></script>
    {% endjavascripts %}
{% endblock %}

{% block documentReady %}
    {{ parent() }}
    $('select.union-selector, select.thana-selector').html('')
    $('select.zilla-selector').trigger('change');
{% endblock documentReady %}