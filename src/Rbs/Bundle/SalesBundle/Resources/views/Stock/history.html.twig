<div class="modal-header portlet-title box blue">
    <button type="button" class="close" data-dismiss="modal" aria-hidden="true"></button>
    <h4 class="modal-title">Item Name : {{ stockHistories[0].stock.item.name | default('') }}</h4>
</div>
<div class="modal-body">
    <div class="row">
        <div class="col-md-12">
            <table class="table-bordered table-striped table-condensed flip-content">
                <thead class="flip-content">
                <tr>
                    <th class="numeric">Sl</th>
                    <th class="numeric">Date</th>
                    <th class="numeric">CreatedBy</th>
                    <th class="numeric">Factory Name</th>
                    <th class="numeric">Warehouse</th>
                    <th class="numeric">Quantity</th>
                    <th class="numeric">Description</th>
                </tr>
                </thead>
                <tbody>
                {% for index, stockHistory in stockHistories %}
                    <tr>
                        <td class="numeric">{{ index + 1 }}.</td>
                        <td class="numeric">{{ stockHistory.createdAt | date('d-m-Y') }}</td>
                        <td class="numeric">{{ stockHistory.createdBy }}</td>
                        <td class="numeric">{{ stockHistory.fromFactory.projectName }}</td>
                        <td class="numeric">{{ stockHistory.toWarehouse.name }}</td>
                        <td class="numeric">{{ stockHistory.quantity }}</td>
                        <td class="numeric">{{ stockHistory.description | default('') }}</td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>
        </div>
    </div>
</div>
<div class="modal-footer">
    <a class="btn blue" href="#" onclick="javascript: window.open('/stock-history-list/{{ stockHistories[0].stock.id }}')">
        More >>
    </a>
</div>
