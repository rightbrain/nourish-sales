{% extends '::base.html.twig' %}

{% block title %}{{ parent() }} : Agent Details {% endblock %}

{% block body %}

    <div class="col-md-12">
        <div class="portlet box blue">
            <div class="portlet-title">
                <div class="caption">
                    Agent Details
                </div>
            </div>

            <div class="portlet-body">
                {{ include('_elements/_back_to_list_button.html.twig', {url: path('agents_home'), label: 'Back to List', 'icon': 'plus'}) }}
                <div class="dataTables_wrapper no-footer">

                    <div class="row">
                        <div class="col-md-12">

                            <div class="portlet">
                                <div class="portlet-body">
                                    <table class="table">
                                        <tr>
                                            <th colspan="4"><h4>Agent Profile Information</h4></th>
                                        </tr>
                                        <tr>
                                            <th colspan="4"><h4 class="modal-title">Agent ID <span class="badge badge-primary">{{ agent.agentID }}</span></h4></th>
                                        </tr>
                                        <tr>
                                            <th>Agent Name</th>
                                            <td>{{ agent.user.profile.fullname | default('') }}</td>
                                            <th>Cellphone</th>
                                            <td>{{ agent.user.profile.cellphone | default('') }}</td>
                                        </tr>
                                        <tr>
                                            <th>Created By</th>
                                            <td>{{ agent.createdBy }}</td>
                                            <th>Created Date</th>
                                            <td>{{ agent.createdAt | date(php_date_format) }}</td>
                                        </tr>
                                        <tr>
                                            <th>Current Balance</th>
                                            <td>{{ agentCurrentBalance | default('') }}</td>
                                            <th>VIP</th>
                                            <td>{% if agent.vIP %} Yes {% else %} Not {% endif %}</td>
                                        </tr>
                                        <tr>
                                            <th>Opening balance</th>
                                            <td>{{ agent.openingBalance | default('0') }}</td>
                                            <th>Location</th>
                                            <td>{{ agent.user.upozilla.name | default('') }}</td>
                                        </tr>
                                        <tr>
                                            <th>Depo</th>
                                            <td>{{ agent.depo.name | default('') }}</td>
                                            <th>Group</th>
                                            <td>{{ agent.agentGroup.label|default('') }}</td>
                                        </tr>
                                        <tr>
                                            <th>Address</th>
                                            <td>{{ agent.user.profile.address | default('') }}</td>
                                            <th></th>
                                            <td></td>
                                        </tr>
                                    </table>
                                </div>
                            </div>

                            <div class="portlet">
                                <div class="portlet-body">
                                    <table class="table">
                                        <tr>
                                            <th colspan="2">
                                                <h4>Agent Login Information</h4>
                                            </th>
                                        </tr>
                                        <tr>
                                            <th>Agent Username</th>
                                            <td>{{ agent.user.username | default('') }}</td>
                                        </tr>
                                        <tr>
                                            <th>Email</th>
                                            <td>{{ agent.user.email | default('') }}</td>
                                        </tr>
                                    </table>
                                </div>
                            </div>

                        </div>
                    </div>
                </div>
            </div>

            <div class="footer">

            </div>

        </div>
    </div>

{% endblock %}