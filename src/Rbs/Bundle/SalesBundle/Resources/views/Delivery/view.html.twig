{% if delivery.deliveryAdd == false %}
<div class="action-content-cancel">
    <form id="delivery-item-form" action="{{ path('delivery_save', {id: delivery.id }) }}" method="post" novalidate="novalidate">
    <div class="modal-header portlet-title blue">
        <button type="button" class="close" data-dismiss="modal" aria-hidden="true"></button>
        <h4 class="modal-title">Delivery ID <span class="badge badge-primary">
                {{ delivery.id }}
            </span></h4>
        <h4 class="modal-title">Order No <span class="badge badge-primary">
            {% for orderNumber in orderNumberArr %}
                {{ orderNumber }}
                {% if delivery.transportGiven != 'AGENT' %},{% endif %}
            {% endfor %}
            </span></h4>
    </div>
    <div class="modal-body">
            <div class="row">
                <div class="col-md-12">
                    <div class="portlet">

                        <div class="portlet-body">

                            <table class="table">
                                <tr>
                                    <th>Agent Name</th>
                                    <td>{{ agent.user.profile.fullName }}</td>
                                </tr>
                                <tr>
                                    <th>Delivery From (Depo)</th>
                                    <td>{{ delivery.depo.name }}</td>
                                </tr>
                            </table>
                        </div>
                    </div>
                    <div class="portlet">
                        <div class="portlet-title">
                            <div class="caption"> Order Items </div>
                        </div>
                        <div class="portlet-body">
                            <table class="table">
                                <thead>
                                <tr>
                                    <th>Order Id</th>
                                    <th>Item</th>
                                    <th>Quantity</th>
                                    <th>Delivered</th>
                                    <th>Remain</th>
                                </tr>
                                </thead>
                                <tbody class="orderItems">
                                {% for order in orderObj %}
                                    {% for index, item in order.orderItems %}
                                        <tr>
                                            <td>{{ order.id }}</td>
                                            <td>{{ item.item.name }}</td>
                                            <td class="item-qty">{{ item.quantity }}</td>
                                            <td class="deliver"><input name="qty[{{ order.id }}][{{ item.id }}]" class="form-control input-xsmall deliver-qty" value="0"></td>
                                            <td class="remain"></td>
                                        </tr>
                                    {% endfor %}
                                {% endfor %}
                                <tbody>
                            </table>
                        </div>
                        <input type="hidden" id="delivery-id" name="delivery-id" value="{{ delivery.id }}">
                    </div>

                    {% if vehicles is not empty %}
                    <div class="portlet">
                        <div class="portlet-title partial-delivered-items">
                            <div class="caption"> Vehicles Info </div>
                        </div>
                        <div class="portlet-body partial-delivered-items">
                            <table class="table">
                                <thead>
                                <tr>
                                    <th>Sl</th>
                                    <th>Vehicle</th>
                                    <th>Driver Name</th>
                                    <th>Vehicle Number</th>
                                    <th>Mobile Number</th>
                                </tr>
                                </thead>
                                <tbody class="orderItems">
                                {% for index, vehicle in vehicles %}
                                    <tr>
                                        <td>{{ index + 1 }}</td>
                                        <td>{{ vehicle.id }}</td>
                                        <td>{{ vehicle.driverName }}</td>
                                        <td>{{ vehicle.truckNumber }}</td>
                                        <td>{{ vehicle.driverPhone }}</td>
                                    </tr>
                                {% endfor %}
                                <tbody>
                            </table>
                        </div>
                    </div>
                    {% endif %}
                </div>
            </div>
    </div>
    <div class="modal-footer">
        {% if vehicles|length > 0 %}
            <button type="submit" class="btn blue green" id="save-delivery"> Complete Delivery </button>
        {% endif %}
        <a class="btn default" data-dismiss="modal"> Close </a>
    </div>
    </form>
</div>
{% endif %}
