<div class="action-content-cancel">
    <div class="modal-header portlet-title blue">
        <button type="button" class="close" data-dismiss="modal" aria-hidden="true"></button>
        <h4 class="modal-title">Order No <span class="badge badge-primary">{{ order.id }}</span></h4>
    </div>
    <div class="modal-body">

        <form id="delivery-item-form">

            <div class="row">
                <div class="col-md-12">
                    <div class="portlet">

                        <div class="portlet-body">

                            <table class="table">
                                <tr>
                                    <th>Agent Name</th>
                                    <td>{{ agent.user.profile.fullName }}</td>
                                    <th>Order Date</th>
                                    <td>{{ order.createdAt|date(php_date_format) }}</td>
                                </tr>
                                <tr>
                                    <th>Delivery Contact Name</th>
                                    <td>{{ delivery.contactName }}</td>
                                    <th>Delivery Contact No</th>
                                    <td>{{ delivery.contactNo }}</td>
                                </tr>
                                <tr>
                                    <th>Other Info</th>
                                    <td>{{ delivery.otherInfo }}</td>
                                    <th>Delivery From (Depo)</th>
                                    <td>{{ delivery.depo.name }}</td>
                                </tr>
                            </table>
                        </div>
                    </div>
                    <div class="portlet">
                        <div class="portlet-title">
                            <div class="caption"> Delivery Progress </div>
                        </div>
                        <div class="portlet-body">
                            <table class="table">
                                <tr>
                                    <th class="text-center col-md-3">Vehicle In</th>
                                    <th class="text-center col-md-3">Start Loading</th>
                                    <th class="text-center col-md-3">Finish Loading</th>
                                    <th class="text-center col-md-3">Vehicle Out</th>
                                </tr>
                                <tr id="process-actions">
                                    <td class="text-center">
                                        {%- if delivery.vehicleIn is not null %}
                                            <span data-original-title="{{ delivery.vehicleIn|date(php_date_format) }}">{{ delivery.vehicleIn|date("h:i a") }}</span>
                                        {%- else %}
                                            {%- if is_granted("ROLE_TRUCK_IN") %}
                                            <button type="button" class="btn green" data-route="{{ path('delivery_vehicle_in', {id: delivery.id}) }}">In</button>
                                            {%- endif %}
                                        {%- endif %}
                                    </td>

                                    <td class="text-center">
                                        {%- if delivery.startLoad is not null %}
                                            <span data-original-title="{{ delivery.vehicleIn|date(php_date_format) }}">{{ delivery.startLoad|date("h:i a") }}</span>
                                        {%- else %}
                                            {%- if is_granted("ROLE_TRUCK_START") %}
                                            <button type="button" class="btn green" data-route="{{ path('delivery_start_loading', {id: delivery.id}) }}" {%- if delivery.vehicleIn is null %} disabled="disabled" {% endif %}>Start</button>
                                            {%- endif %}
                                        {%- endif %}
                                    </td>

                                    <td class="text-center">
                                        {%- if delivery.finishLoad is not null %}
                                            <span data-original-title="{{ delivery.vehicleIn|date(php_date_format) }}">{{ delivery.finishLoad|date("h:i a") }}</span>
                                        {%- else %}
                                            {%- if is_granted("ROLE_TRUCK_FINISH") %}
                                            <button type="button" data-action="finish-loading" data-route="{{ path('delivery_finish_loading', {id: delivery.id}) }}" class="btn green" {%- if delivery.startLoad is null %} disabled="disabled" {% endif %}>Finish</button>
                                            {%- endif %}
                                        {% endif %}
                                    </td>

                                    <td class="text-center">
                                        {%- if delivery.vehicleOut is not null %}
                                            <span data-original-title="{{ delivery.vehicleIn|date(php_date_format) }}">{{ delivery.vehicleOut|date("h:i a") }}</span>
                                        {%- else %}
                                            {%- if is_granted("ROLE_TRUCK_OUT") %}
                                            <button type="button" data-route="{{ path('delivery_vehicle_out', {id: delivery.id}) }}" class="btn green"  {%- if delivery.finishLoad is null %} disabled="disabled" {% endif %}>Out</button>
                                            {%- endif %}
                                        {%- endif %}
                                    </td>
                                </tr>
                            </table>
                        </div>
                    </div>
                    <div class="portlet">
                        <div class="portlet-title">
                            <div class="caption"> Order Items </div>
                        </div>
                        <div class="portlet-body">
                            <table class="table">
                                <thead>
                                <tr>
                                    <th>Order Id</th>
                                    <th>Item</th>
                                    <th>Quantity</th>
                                    <th>Delivered</th>
                                    <th>Remain</th>
                                </tr>
                                </thead>
                                <tbody class="orderItems">
                                {% for index, item in order.orderItems %}
                                    <tr>
                                        <td>{{ order.id }}</td>
                                        <td>{{ item.item.name }}</td>
                                        <td class="item-qty">{{ item.quantity }}</td>
                                        <td class="deliver"><input name="qty[{{ order.id }}][{{ item.id }}]" class="form-control input-xsmall deliver-qty" value="0"></td>
                                        <td class="remain"></td>
                                    </tr>
                                {% endfor %}
                                <tbody>
                            </table>
                        </div>
                        <input type="hidden" id="delivery-id" name="delivery-id" value="{{ delivery.id }}">
                    </div>

                    {% if partialItems is not empty %}
                    <div class="portlet">
                        <div class="portlet-title partial-delivered-items">
                            <div class="caption"> Partial Delivered Items </div>
                        </div>
                        <div class="portlet-body partial-delivered-items">
                            <table class="table">
                                <thead>
                                <tr>
                                    <th></th>
                                    <th>Order Id</th>
                                    <th>Item</th>
                                    <th>Quantity</th>
                                    <th>Delivered</th>
                                    <th>Remain</th>
                                </tr>
                                </thead>
                                <tbody class="orderItems">
                                {% for index, item in partialItems %}
                                    <tr>
                                        <td><input name="checked-items[{{ item.orderId }}][{{ item.id }}]" type="checkbox"></td>
                                        <td>{{ item.orderId }}</td>
                                        <td>{{ item.itemName }}</td>
                                        <td class="item-qty">{{ item.quantity - item.delivered }}</td>
                                        <td class="deliver"><input name="previous-items[{{ item.orderId }}][{{ item.id }}]" class="form-control input-xsmall deliver-qty" value="0"></td>
                                        <td class="remain"></td>
                                    </tr>
                                {% endfor %}
                                <tbody>
                            </table>
                        </div>
                    </div>
                    {% endif %}
                </div>
            </div>
        </form>

    </div>
    <div class="modal-footer">
        <button type="button" class="btn blue green" id="save-delivery" {%- if delivery.finishLoad is null %} disabled="disabled" {% endif %}> Complete Delivery </button>
        <a class="btn default" data-dismiss="modal"> Close </a>
    </div>
</div>