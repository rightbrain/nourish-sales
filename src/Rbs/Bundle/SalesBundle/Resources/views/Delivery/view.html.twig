{% if order.deliveryState == 'READY' %}
<div class="action-content-cancel">
    <div class="modal-header portlet-title blue">
        <button type="button" class="close" data-dismiss="modal" aria-hidden="true"></button>
        <h4 class="modal-title">Order No <span class="badge badge-primary">{{ order.id }}</span></h4>
    </div>
    <div class="modal-body">

        <form id="delivery-item-form">

            <div class="row">
                <div class="col-md-12">
                    <div class="portlet">

                        <div class="portlet-body">

                            <table class="table">
                                <tr>
                                    <th>Agent Name</th>
                                    <td>{{ agent.user.profile.fullName }}</td>
                                    <th>Order Date</th>
                                    <td>{{ order.createdAt|date(php_date_format) }}</td>
                                </tr>
                                <tr>
                                    <th>Delivery Contact Name</th>
                                    <td>{{ delivery.contactName }}</td>
                                    <th>Delivery Contact No</th>
                                    <td>{{ delivery.contactNo }}</td>
                                </tr>
                                <tr>
                                    <th>Other Info</th>
                                    <td>{{ delivery.otherInfo }}</td>
                                    <th>Delivery From (Depo)</th>
                                    <td>{{ delivery.depo.name }}</td>
                                </tr>
                            </table>
                        </div>
                    </div>
                    <div class="portlet">
                        <div class="portlet-title">
                            <div class="caption"> Order Items </div>
                        </div>
                        <div class="portlet-body">
                            <table class="table">
                                <thead>
                                <tr>
                                    <th>Order Id</th>
                                    <th>Item</th>
                                    <th>Quantity</th>
                                    <th>Delivered</th>
                                    <th>Remain</th>
                                </tr>
                                </thead>
                                <tbody class="orderItems">
                                {% for index, item in order.orderItems %}
                                    <tr>
                                        <td>{{ order.id }}</td>
                                        <td>{{ item.item.name }}</td>
                                        <td class="item-qty">{{ item.quantity }}</td>
                                        <td class="deliver"><input name="qty[{{ order.id }}][{{ item.id }}]" class="form-control input-xsmall deliver-qty" value="0"></td>
                                        <td class="remain"></td>
                                    </tr>
                                {% endfor %}
                                <tbody>
                            </table>
                        </div>
                        <input type="hidden" id="delivery-id" name="delivery-id" value="{{ delivery.id }}">
                    </div>

                    {% if partialItems is not empty %}
                    <div class="portlet">
                        <div class="portlet-title partial-delivered-items">
                            <div class="caption"> Partial Delivered Items </div>
                        </div>
                        <div class="portlet-body partial-delivered-items">
                            <table class="table">
                                <thead>
                                <tr>
                                    <th></th>
                                    <th>Order Id</th>
                                    <th>Item</th>
                                    <th>Quantity</th>
                                    <th>Delivered</th>
                                    <th>Remain</th>
                                </tr>
                                </thead>
                                <tbody class="orderItems">
                                {% for index, item in partialItems %}
                                    <tr>
                                        <td><input name="checked-items[{{ item.orderId }}][{{ item.id }}]" type="checkbox"></td>
                                        <td>{{ item.orderId }}</td>
                                        <td>{{ item.itemName }}</td>
                                        <td class="item-qty">{{ item.quantity - item.delivered }}</td>
                                        <td class="deliver"><input name="previous-items[{{ item.orderId }}][{{ item.id }}]" class="form-control input-xsmall deliver-qty" value="0"></td>
                                        <td class="remain"></td>
                                    </tr>
                                {% endfor %}
                                <tbody>
                            </table>
                        </div>
                    </div>
                    {% endif %}
                </div>
            </div>
        </form>

    </div>
    <div class="modal-footer">
        <button type="button" class="btn blue green" id="save-delivery"> Complete Delivery </button>
        <a class="btn default" data-dismiss="modal"> Close </a>
    </div>
</div>
{% else %}
    <div class="action-content-cancel">
        <div class="modal-header portlet-title blue">
            <button type="button" class="close" data-dismiss="modal" aria-hidden="true"></button>
            <h4 class="modal-title">Order No <span class="badge badge-primary">{{ order.id }}</span></h4>
        </div>

        <form id="delivery-item-form-partially-shipped" action="{{ path('delivery_partially_shipped') }}" method="post">
        <div class="modal-body">

                <div class="row">
                    <div class="col-md-12">
                        <div class="portlet">

                            <div class="portlet-body">

                                <table class="table">
                                    <tr>
                                        <th>Agent Name</th>
                                        <td>{{ agent.user.profile.fullName }}</td>
                                        <th>Order Date</th>
                                        <td>{{ order.createdAt|date(php_date_format) }}</td>
                                    </tr>
                                    <tr>
                                        <th>Delivery Contact Name</th>
                                        <td>{{ delivery.contactName }}</td>
                                        <th>Delivery Contact No</th>
                                        <td>{{ delivery.contactNo }}</td>
                                    </tr>
                                    <tr>
                                        <th>Other Info</th>
                                        <td>{{ delivery.otherInfo }}</td>
                                        <th>Delivery From (Depo)</th>
                                        <td>{{ delivery.depo.name }}</td>
                                    </tr>
                                </table>
                            </div>
                        </div>
                        <div class="portlet">
                            <div class="portlet-title">
                                <div class="caption"> Order Items </div>
                            </div>
                            <div class="portlet-body">
                                <table class="table">
                                    <thead>
                                    <tr>
                                        <th>Order Id</th>
                                        <th>Item</th>
                                        <th>Total</th>
                                        <th>Remain</th>
                                        <th>Quantity</th>
                                    </tr>
                                    </thead>
                                    <tbody class="orderItemsPartiallyShipped">
                                    {% for index, item in partialItems %}
                                        {% if item.orderId == order.id %}
                                        <tr>
                                            <td>{{ item.orderId }}</td>
                                            <td>{{ item.itemName }}</td>
                                            <td class="item-qtyPartiallyShipped">{{ item.quantity }}</td>
                                            <td class="deliveredPartiallyShipped">{{ item.quantity - item.delivered }}</td>
                                            <td class="deliverPartiallyShipped">
                                                <input name="qty[{{ item.id }}]" class="form-control input-xsmall deliver-qtyPartiallyShipped" value="{{ item.quantity - item.delivered }}">
                                                <input type="hidden" name="orderId" value="{{ order.id }}"/>
                                            </td>
                                        </tr>
                                        {% endif %}
                                    {% endfor %}
                                    <tbody>
                                </table>
                            </div>
                            <input type="hidden" name="deliveryId" value="{{ delivery.id }}">
                        </div>

                    </div>
                </div>
        </div>
        <div class="modal-footer">
            <input type="submit" id="partial-shipped-complete-delivery" value="Complete Delivery" class="btn blue green"/>
            <a class="btn default" data-dismiss="modal"> Close </a>
        </div>
        </form>
    </div>

{% endif %}
