{% extends '::base.html.twig' %}

{% block title %}{{ parent() }} : Cash Receive From Depo {% endblock %}

{% block body %}

    <div class="modal fade" id="ajax" role="basic" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-body">
                    <img src="{{ asset('assets/global/img/loading-spinner-grey.gif') }}" alt="" class="loading">
                    <span> &nbsp;&nbsp;Loading... </span>
                </div>
            </div>
        </div>
    </div>
    <div class="modal fade" id="ajaxHistory" role="basic" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-body">
                    <img src="{{ asset('assets/global/img/loading-spinner-grey.gif') }}" alt="" class="loading">
                    <span> &nbsp;&nbsp;Loading... </span>
                </div>
            </div>
        </div>
    </div>

    <div class="col-md-12">
        <div class="portlet box blue">
            <div class="portlet-title">
                <div class="caption">
                    <i class="fa fa-globe"></i>Cash Receive From Depo List
                </div>
            </div>
            <div class="portlet-body">

                <table class="table table-striped table-bordered">
                    <thead>
                    <tr>
                        <th>Sl</th>
                        <th>Depo Name</th>
                        <th>Total Amount</th>
                        <th>Due Amount</th>
                    </tr>
                    </thead>
                    <tbody>

                    {% for cashReceive in cashReceives %}
                        <tr>
                            <td>{{ loop.index }}</td>
                            <td>{{ cashReceive.name }}</td>
                            <td>{{ cashReceive.total }}</td>
                            <td>{{ cashDeposits[cashReceive.depoId] is defined ? (cashReceive.total - cashDeposits[cashReceive.depoId].totalDeposit) : 0 }}</td>
                        </tr>
                    {% endfor %}

                    </tbody>
                </table>

            </div>
        </div>
    </div>
    <div style="clear: both"></div>
{% endblock %}

{% block stylesheets %}
    {{ parent() }}
{% endblock %}

{% block javascripts %}
    {{ parent() }}
{% endblock %}