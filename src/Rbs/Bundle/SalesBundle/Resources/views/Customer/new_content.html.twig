    <h4>Customer Profile Information</h4>

    <div class="form-group">
        <label for="inputEmail12" class="col-md-2 control-label">VIP</label>
        <div class="col-md-2">
            {{ form_widget(form.VIP, { 'attr': {'class': ''} }) }}
        </div>
    </div>

    {{ form_row(form.customerID, { 'attr': {'class': ''} }) }}

    {{ form_row(form.user.profile.fullName, { 'attr': {'class': ''} }) }}
    {{ form_row(form.user.userType, { 'attr': {'class': ''} }) }}
    {{ form_row(form.creditLimit, { 'attr': {'class': ''} }) }}
    {{ form_row(form.openingBalance, { 'attr': {'class': ''} }) }}
    {{ form_row(form.agent, { 'attr': {'class': ''} }) }}
    {{ form_row(form.depo, { 'attr': {'class': ''} }) }}
    {{ form_row(form.area, { 'attr': {'class': ''} }) }}
    {{ form_row(form.agent, { 'attr': {'class': ''} }) }}
    {{ form_row(form.user.profile.cellphone, { 'attr': {'class': ''} }) }}
    {{ form_row(form.user.profile.address, { 'attr': {'class': ''} }) }}
    {{ form_row(form.customerGroup, { 'attr': {'class': ''} }) }}

    <div class="form-group">
        <label for="inputEmail12" class="col-md-2 control-label">Photo</label>
        <div class="col-md-4">
            <div class="input-icon">
                <i class="fa fa-folder"></i>
                {{ form_widget(form.user.profile.file, { 'attr': {'class': 'form-control'} }) }}
            </div>
        </div>
    </div>

    <hr>
    <h4>Customer Login Information</h4>

    {{ form_row(form.user.username, { 'attr': {'class': ''} }) }}
    {{ form_row(form.user.plainPassword.first, { 'attr': {'class': ''} }) }}
    {{ form_row(form.user.plainPassword.second, { 'attr': {'class': ''} }) }}
    {{ form_row(form.user.email, { 'attr': {'class': ''} }) }}
