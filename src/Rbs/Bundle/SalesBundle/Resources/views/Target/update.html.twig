{% extends 'base.html.twig' %}

{% block title %}{{ parent() }} : Target update {% endblock %}

{% block body %}
    <div class="col-md-12">
        <div class="portlet box blue">
            <div class="portlet-title">
                <div class="caption">
                    Target Update
                </div>
            </div>
            <div class="portlet-body">
                {{ include('_elements/_back_to_list_button.html.twig', {url: path('target_list'), label: 'Back to List', 'icon': 'chevron-left'}) }}

                {{ form_start(form) }}

                <div class="form-group">
                    <label class="col-md-2" style="margin-left: 30px;">Location:</label>
                    <div class="col-md-4">
                      {{ target.location.name }}
                    </div>
                </div>

                <div class="form-group">
                    <label class="col-md-2" style="margin-left: 30px;">Category Name:</label>
                    <div class="col-md-4">
                        {{ target.category.categoryName }}
                    </div>
                </div>

                <div class="row col-md-12 right" style="float: right;">
                    <table class="table table-bordered table-striped">
                        <thead>
                            <tr>
                                <th>Quantity</th>
                                <th>Start Date</th>
                                <th>End Date</th>
                            </tr>
                        </thead>
                        <tbody>
                            <tr>
                                <td class="col-md-2">{{ form_widget(form.quantity) }}</td>
                                {#<td class="col-md-2">{{ form_widget(form.startDate) }}</td>#}
                                {#<td class="col-md-2">{{ form_widget(form.endDate) }}</td>#}
                            </tr>
                        </tbody>
                    </table>
                </div>

                {{ form_end(form) }}

            </div>
        </div>
    </div>
    <div style="clear: both"></div>
{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    {% stylesheets  filter='cssrewrite'
    "assets/global/plugins/bootstrap-toastr/toastr.min.css"
    %}
    <link rel="stylesheet" href="{{ asset_url }}" />
    {% endstylesheets %}

{% endblock stylesheets %}

{% block javascripts %}
    {{ parent() }}
    {% javascripts
    "assets/global/plugins/bootstrap-toastr/toastr.min.js"

    "assets/global/plugins/jquery-validation/js/jquery.validate.min.js"
    "assets/admin/pages/scripts/form-validation.js"
    "bundles/rbssales/js/order.js"
    %}
    <script type="text/javascript" src="{{ asset_url }}"></script>
    {% endjavascripts %}
{% endblock javascripts %}

{% block documentReady %}
    {{ parent() }}

    $(".month-year-picker").datepicker( {
        format: "dd-mm-yyyy",
        viewMode: "months",
        minViewMode: "months",
        autoclose: true
    });

{% endblock %}