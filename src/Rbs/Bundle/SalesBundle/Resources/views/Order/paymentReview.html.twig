<div class="main-content">
    <div class="modal-header portlet-title blue">
        <button type="button" class="close" data-dismiss="modal" aria-hidden="true"></button>
        <h4 class="modal-title">Order Summery</h4>
    </div>

    <div class="modal-body">
        <div class="row">
            <div class="col-md-12">
                <div class="portlet box">

                    <div class="portlet-body">
                        <div class="no-footer">
                            <table class="table col-md-6">
                                <tr><th class="col-md-8">Order Number</th><td class="col-md-4">{{ order.id }}</td></tr>
                                <tr><th>Customer Name</th><td>{{ order.customer.user.profile.fullName }}</td></tr>
                                {% if order.createdBy is not null %}
                                    <tr><th>Created By</th><td>{{ order.createdBy.username }}</td></tr>
                                {% endif %}
                                <tr><th>Order Amount</th><td>{{ order.totalAmount|number_format(2) }}</td></tr>
                                <tr><th>Paid Amount</th><td>{{ order.paidAmount|number_format(2) }}</td></tr>
                                <tr><th>Remarks</th><td>{{ order.remark }}</td></tr>
                                <tr><th>Current Credit Limit</th><td>{{ currentCreditLimit|number_format(2) }}</td></tr>
                                <tr><th></th><td></td></tr>
                            </table>

                            <table class="table-bordered table-striped table-condensed flip-content col-md-12">
                                <thead>
                                <tr>
                                    <th class="col-md-3">Date</th>
                                    <th class="col-md-4">Bank</th>
                                    <th class="col-md-4">Branch</th>
                                    <th class="text-right col-md-1">Amount</th>
                                </tr>
                                </thead>
                                <tbody>
                                {% set available = true %}
                                {% for index, payment in order.payments %}
                                    <tr>
                                        <td>{{ payment.depositDate|date(php_date_format) }}</td>
                                        <td>{{ payment.bankName }}</td>
                                        <td>{{ payment.branchName }}</td>
                                        <td class="text-right">{{ payment.amount|number_format(2) }}</td>
                                    </tr>
                                {% endfor %}
                                {% if order.payments is empty %}
                                    <tr><td colspan="4">No Payment Added. <a href="{{ path('payment_create') }}">Click Here to Add a Payment</a></td></tr>
                                {% endif %}
                                </tbody>
                                <tfoot>
                                {% if isOverCredit == true and order.customer.VIP != true %}
                                    <tr><td colspan="4">
                                            <div class="alert alert-danger" style="margin-bottom: 0; padding: 2px;">
                                                <strong>Notice!</strong> This order amount is over credit.
                                                {% if is_granted('ROLE_OVER_CREDIT_APPROVE') == false %}
                                                    Need another approval by management.
                                                {% endif %}
                                            </div>
                                        </td></tr>
                                {% endif %}
                                </tfoot>
                            </table>

                            <div style="clear: both"></div>
                        </div>
                    </div>

                </div>
            </div>
        </div>
    </div>

    <div class="modal-footer">
        <a class="btn red order-cancel-modal-action">
            Order Cancel
        </a>
        {% if is_granted('ROLE_OVER_CREDIT_APPROVE') %}
            <a class="btn green confirmation-btn" href="{{ path('approve_credit_payment', {"id": order.id}) }}" data-title="Do you want to approve payment this order?">
                Payment Approve
            </a>
        {% elseif is_granted('ROLE_PAYMENT_APPROVE') %}
            <a class="btn green confirmation-btn" href="{{ path('approve_payment', {"id": order.id}) }}">
                Payment Approve
            </a>
        {% endif %}
    </div>
</div>

{{ include('RbsSalesBundle:Order:_orderModalActionForm.html.twig') }}