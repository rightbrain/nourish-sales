{{ form_start(form, {'method': 'POST'}) }}

<div style="background: #F1F3FA;height: 55px;margin-bottom: 10px;">
    <div class="form-group">
        <label class="col-md-2 control-label" style="margin-top: 10px;">Customer</label>
        <div class="col-md-6" style="margin-top: 10px;">
            <div class="input-icon">
                {{ form_widget(form.customer) }}
            </div>
        </div>
    </div>
</div>

    <span id="orderItems" class="tags" data-prototype="
        {% filter escape %}
        {{ include('RbsSalesBundle:Order:order_item_content.html.twig', { 'form': form.orderItems.vars.prototype }) }}
        {% endfilter %}">

        {% for orderItem in form.orderItems %}

            <div style="background: #F1F3FA;height: 105px;margin-bottom: 10px;">
                <div class="form-group">
                    <label class="col-md-2 control-label" style="margin-top: 10px;">Item</label>
                    <div class="col-md-4" style="margin-top: 10px;">
                        <div class="input-icon">
                            {{ form_widget(orderItem.item) }}
                        </div>
                    </div>

                    <label class="col-md-1 control-label"style="margin-top: 10px;">Quantity</label>
                    <div class="col-md-4"style="margin-top: 10px;">
                        <div class="input-icon">
                            {{ form_widget(orderItem.quantity) }}
                        </div>
                    </div>
                </div>

                <div class="form-group">
                    <label class="col-md-2 control-label">Price</label>
                    <div class="col-md-4">
                        <div class="input-icon">
                            {{ form_widget(orderItem.price) }}
                        </div>
                    </div>

                    <label class="col-md-1 control-label"></label>
                    <div class="col-md-4">
                        <div class="input-icon">

                        </div>
                    </div>
                </div>
            </div>

        {% endfor %}
    </span>

<div class="form-group">
    <div class="col-md-2" style="float:right;">
        <div class="input-icon">
            {{ form_row(form.submit) }}
        </div>
    </div>
</div>

{{ form_end(form) }}
