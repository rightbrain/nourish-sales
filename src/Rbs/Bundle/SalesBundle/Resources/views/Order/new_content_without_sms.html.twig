{{ form_start(form, {'method': 'POST', attr: { novalidate: 'novalidate'}}) }}

    <div class="col-md-6">
        <div class="form-group">
            <label class="col-md-4 control-label">Agent *</label>
            <div class="col-md-8" style="margin-top: 10px;">
                {{ form_widget(form.agent) }}
                {{ form_errors(form.agent) }}
            </div>
        </div>
        <div class="form-group">
            <label class="col-md-4 control-label">Payment Mode *</label>
            <div class="col-md-8" style="margin-top: 10px;">
                {{ form_widget(form.paymentMode) }}
                {{ form_errors(form.paymentMode) }}
            </div>
        </div>
        <div class="form-group">
            <label class="col-md-4 control-label">Order Date *</label>
            <div class="col-md-8" style="margin-top: 10px;">
                {{ form_widget(form.created_at) }}
                {{ form_errors(form.created_at) }}
            </div>
        </div>

    </div>
    <div class="col-md-6">
        <div class="form-group">
            <label class="col-md-4 control-label">Depo *</label>
            <div class="col-md-8" style="margin-top: 10px;">
                {{ form_widget(form.depo, {'attr' : depoAttr}) }}
                {{ form_errors(form.depo) }}
            </div>
        </div>
        <div class="form-group">
            <label class="col-md-4 control-label">Remark</label>
            <div class="col-md-8" style="margin-top: 10px;">
                {{ form_widget(form.remark) }}
            </div>
        </div>

    </div>

    <div class="order-item-list">
        <table class="table table-condensed table-hover" style="margin-bottom:0!important;">
            <thead>
            <tr>
                <th colspan="4"><h3 style="margin: 0" class="table pull-left">Item Information:</h3></th>
                <th colspan="3"><div class="pull-right"><a href="#" class="add_tag_link blue btn" id="add_order_item">Add Item</a></div></th>
            </tr>
            <tr>
                <th style="width: 300px;">Item</th>
                <th style="width: 50px;">Quantity</th>
                <th style="width: 20px;" class="text-center">Unit</th>
                <th style="width: 150px;" class="text-center">Available</th>
                <th style="width: 50px;">Price</th>
                <th style="width: 70px;">Total</th>
                <th style="width: 70px;"></th>
            </tr>
            </thead>
            <tbody id="orderItems" class="tags" data-prototype="
            {% filter escape %}
            {{ include('RbsSalesBundle:Order:order_item_content.html.twig', { 'form': form.orderItems.vars.prototype }) }}
            {% endfilter %}">
            {% for orderItem in form.orderItems %}

            {% endfor %}
            </tbody>
            <tfoot>
            <tr>
                <th style="text-align: right">Total</th>
                <th style="text-align: right" id="order_totalQuantity"></th>
                <td></td>
                <td></td>
                <td></td>
                <th colspan="2">{{ form_widget(form.totalAmount, { 'attr': {'style': ''}} ) }}</th>
            </tr>
            </tfoot>
        </table>
    </div>

    <br/>
    <div class="payment-list" style="overflow-x:auto;">
        <table class="table table-condensed table-hover" style="width:100%; margin-bottom:0!important;">
            <thead>
            <tr>
                <th colspan="5"><h3 style="margin: 0" class="table pull-left">Payment Information:</h3></th>
                <th colspan="4"><div class="pull-right"><a href="#" class="add_payment_tag_link blue btn" id="add_payment_item">Add Payment Info</a></div></th>
            </tr>
            <tr>
{#                <th style="width: 22%" width="300px">Agent Bank Brnch</th>#}
                <th style="width: 15%;">Deposit Amount</th>
                <th style="width: 15%;">Date</th>
                <th style="width: 15%">Receive Account</th>
                <th style="width: 15%">Payment Method</th>
{#                <th style="width: 15%">Bank Account</th>#}
                <th class="text-center" colspan="2" style="width: 30%">Remarks</th>
            </tr>
            </thead>
            <tbody id="payments" class="payments" data-prototype="
        {% filter escape %}
        {{ include('RbsSalesBundle:Order:payment_content.html.twig', { 'form': form.payments.vars.prototype }) }}
        {% endfilter %}">
            {% for payment in form.payments %}

            {% endfor %}
            </tbody>
            <tr>
                <td colspan="8"></td>
            </tr>

        </table>
    </div>

<br/>
{{ form_row(form.submit,{ 'attr': {'style': 'float:right;'}}) }}
{{ form_end(form) }}
