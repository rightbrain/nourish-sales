<div class="main-content">
    <div class="modal-body">
        <div class="row">
            <div class="col-md-12">
                <div class="portlet box">

                    <div class="portlet-body">
                        <h4>Order Summary</h4>
                        <table class="table col-md-6">
                            <tr><th class="col-md-8">Order Number</th><td class="col-md-4">{{ order.id }}</td></tr>
                            <tr><th>Agent Name</th><td>{{ order.agent.user.profile.fullName }}</td></tr>
                            {% if order.createdBy is not null %}
                                <tr><th>Created By</th><td>{{ order.createdBy.username|default('') }}</td></tr>
                            {% endif %}
                            <tr><th>Order Amount</th><td>{{ order.totalAmount|number_format(2) }}</td></tr>
                            <tr><th>Paid Amount</th><td>{{ order.paidAmount|number_format(2) }}</td></tr>
                            <tr><th>Remarks</th><td>{{ order.remark }}</td></tr>
                            <tr><th></th><td></td></tr>
                        </table>

                        <h4>Order Items</h4>
                        <table class="table table-bordered table-striped table-condensed flip-content">
                            <thead>
                            <tr>
                                <th class="col-md-1">Sl</th>
                                <th class="col-md-7">Item</th>
                                <th class="text-center col-md-2">Quantity</th>
                            </tr>
                            </thead>
                            <tbody>
                            {% for index, orderItem in order.orderItems %}
                                <tr>
                                    <td>{{ index + 1 }}.</td>
                                    <td>{{ orderItem.item.itemName | default('') }}</td>
                                    <td class="text-center">{{ orderItem.quantity | default('') }}</td>
                                </tr>
                            {% endfor %}
                            </tbody>
                        </table>
                        <br />
                        <h4>Action History</h4>
                        <table class="table table-bordered table-striped table-condensed flip-content">
                            <thead>
                            <tr>
                                <th class="col-md-2">Action</th>
                                <th class="col-md-2">By</th>
                                <th class="col-md-3">At</th>
                                <th class="col-md-5">Remarks</th>
                            </tr>
                            </thead>
                            <tbody>
                            {% for auditLog in auditLogs %}
                                <tr>
                                    <td>{{ auditLog.type }}</td>
                                    <td>{{ auditLog.user }}</td>
                                    <td>{{ auditLog.eventTime|date("d-m-Y \\a\\t g:ia", "Asia/Dhaka") }}</td>
                                    <td>{{ auditLog.reason }}</td>
                                </tr>
                            {% endfor %}
                            </tbody>
                        </table>

                        <div style="clear: both"></div>
                    </div>

                </div>
            </div>
        </div>
    </div>

    <div class="modal-footer">
        <a class="btn red order-cancel-modal-action">
            Order Cancel
        </a>
        <a class="btn green" href="{{ path('order_verify', {"id": order.id}) }}">
            Verify and Process for Delivery
        </a>
    </div>
</div>

{{ include('RbsSalesBundle:Order:_orderModalActionForm.html.twig') }}