{% extends '::base.html.twig' %}

{% block title %}{{ parent() }} : Orders {% endblock %}
{% block body %}
<div class="main-content">

    <div class="modal-header portlet-title blue">
        <div class="hidden-print">{{ include('_elements/_back_to_list_button.html.twig', {url: path('chick_truck_info_list'), label: 'BACK TO LIST', 'icon': 'chevron-left'}) }}</div>
        <h3 class="modal-title uppercase text-center">Delivery Challan</h3>
    </div>

    <div class="modal-body">
        <div class="row">
            <table width="100%" class="table-full-width">
                <tr>
                    <td class="col-md-6" style="vertical-align: top; width: 60%">
                        <div class="portlet">
                            <div class="portlet-title partial-delivered-items">
                                <div class="caption"> Challan Info </div>
                            </div>
                            <div class="portlet-body">
                                <table class="table">
                                    <tbody>
                                    <tr>
                                        <th>Challan Number : </th>
                                        <td>{{ vehicle.deliveries.id }}</td>
                                        <th>Vehicle Supply By : </th>
                                        <td>
                                            {% if((vehicle.agent is not null)) %}
                                                {{ vehicle.agent.name}}
                                            {% else %}
                                                {{ 'NOURISH' }}
                                            {% endif %}
                                        </td>
                                    </tr>
                                    <tr>
                                        <th>Vehicle In : </th>
                                        <td>
                                            {{ vehicle.vehicleIn | date("d-m-Y \\a\\t g:ia", "Asia/Dhaka") }}
                                        </td>

                                        <th>Vehicle Out : </th>
                                        <td>
                                            {{ vehicle.vehicleOut | date("d-m-Y \\a\\t g:ia", "Asia/Dhaka") }}
                                        </td>
                                    </tr>
                                    <tr>
                                        <th>Delivery From : </th>
                                        <td colspan="4">
                                            {{ vehicle.depo.name  }}
                                        </td>
                                    </tr>
                                    </tbody></table>
                            </div>
                        </div>
                    </td>
                    <td class="col-md-6" style="vertical-align: top; width: 40%">
                        <div class="portlet">
                            <div class="portlet-title partial-delivered-items">
                                <div class="caption"> Vehicles Info </div>
                            </div>
                            <div class="portlet-body partial-delivered-items">
                                <table class="table">
                                    <tr>
                                        <th>Vehicle Number</th>
                                        <td>{{ vehicle.truckNumber }}</td>
                                    </tr>
                                    <tr>
                                        <th>Driver Name</th>
                                        <td>{{ vehicle.driverName }}</td>
                                    </tr>
                                    <tr>
                                        <th>Mobile Number</th>
                                        <td>{{ vehicle.driverPhone }}</td>
                                    </tr>
                                </table>
                            </div>
                        </div>
                    </td>
                </tr>
            </table>

            <div class="col-md-12">
                <div class="portlet">
                    <div class="portlet-title">
                        <div class="caption"> Order Items </div>
                    </div>
                    <div class="portlet-body">
                        <table class="table">
                            <thead>
                            <tr>
                                <th>SL</th>
                                <th>Order Id</th>
                                <th>Code</th>
                                <th>Name Of Agent</th>
                                <th>Location</th>
                                <th>Item</th>
                                <th>Rate</th>
                                <th>Actual</th>
                                <th>Bonus</th>
                                <th>Total</th>
                                <th>Moral</th>
                                <th>Grand Total</th>
                            </tr>
                            </thead>
                            <tbody class="orderItems">
                            {% set totalQuentity = 0 %}
                            {% set totalDeliveredQuantity = 0 %}
                            {% set totalBonus = 0 %}
                            {% set totalDamageQuantity = 0 %}
                            {% for order in vehicle.deliveries.orders %}

                                {% for index, item in order.orderItems %}
                                    {% if item.quantity != 0 %}
                                        {% set totalQuentity= totalQuentity + item.quantity %}
                                        {% set partialQty=0 %}
                                        {% if order.id in partialItems|keys %}
                                            {% set partialQty = partialItems[order.id][item.id]['delivered'] %}
                                        {% endif %}
                                        {% set totalDeliveredQuantity= totalDeliveredQuantity + partialQty %}
                                        {% set totalBonus= totalBonus + item.bonusQuantity %}
                                        {% set totalDamageQuantity= totalDamageQuantity + item.damageQuantity %}
                                            <tr>
                                                <td>{{ index+1 }}</td>
                                                <td>{{ order.id }}</td>
                                                <td>{{ order.agent.chickAgentID }}</td>
                                                <td>{{ order.agent.user.profile.fullName }}</td>
                                                <td>{{ order.agent.user.zilla.name }}</td>
                                                <td>{{ item.item.getItemCodeName }}</td>
                                                <td>{{ item.price }}</td>
                                                <td class="deliver">
                                                    {{ partialQty }}
                                                </td>
                                                <td>{{item.bonusQuantity }}</td>
                                                <td>{{partialQty + item.bonusQuantity }}</td>
                                                <td>{{item.damageQuantity }}</td>
                                                <td>{{partialQty - item.damageQuantity }}</td>
                                            </tr>
                                    {% endif %}
                                {% endfor %}
                            {% endfor %}
                            <tbody>
                                <tr class="bold">
                                    <td></td>
                                    <td></td>
                                    <td></td>
                                    <td></td>
                                    <td></td>
                                    <td></td>
                                    <td class="bold">Total</td>
                                    <td>{{ totalDeliveredQuantity }}</td>
                                    <td>{{ totalBonus }}</td>
                                    <td>{{ totalDeliveredQuantity + totalBonus }}</td>
                                    <td>{{ totalDamageQuantity }}</td>
                                    <td>{{ totalDeliveredQuantity - totalDamageQuantity }}</td>
                                </tr>
                        </table>
                        <br>
                        <table class="table table-bordered">

                            <tr>
                                <td style="height: 50px"></td>
                                <td></td>
                                <td></td>
                                <td></td>
                            </tr>
                            <tr>
                                <th class="text-center">Prepared By</th>
                                <th class="text-center">Checked By</th>
                                <th class="text-center">Delivered By</th>
                                <th class="text-center">Manager</th>
                            </tr>
                            <tr>
                                <th colspan="4" style="text-align: center; font-size: 16px">RECEIVED THE ABOVE GOODS IN GOOD CONDITION</th>
                            </tr>
                            <tr>
                                <td rowspan="2" colspan="3"></td>
                                <td style="height: 40px"></td>
                            </tr>
                            <tr>
                                <th class="text-center">Received By</th>
                            </tr>
                        </table>

                    </div>
                    {#<input type="hidden" id="delivery-id" name="delivery-id" value="{{ delivery.id }}">#}
                </div>
            </div>
        </div>
    </div>
    <div class="modal-footer">

        <button type="button" class="btn btn-primary" onclick="window.print();">Print</button>
    </div>
</div>
{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    {% stylesheets
        "bundles/rbssales/css/modal-print.css"
        filter='cssrewrite' output='css/compiled/datatable.css' %}
        <link rel="stylesheet" href="{{ asset_url }}" />
    {% endstylesheets %}
{% endblock %}