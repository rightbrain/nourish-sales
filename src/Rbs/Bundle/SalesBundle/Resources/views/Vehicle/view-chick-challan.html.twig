<style>
    .table tr th, .table tr td {
        font-size: 16px !important;
    }
    .table-bordered > thead > tr > th,
    .table-bordered > tbody > tr > th,
    .table-bordered > tfoot > tr > th,
    .table-bordered > thead > tr > td,
    .table-bordered > tbody > tr > td,
    .table-bordered > tfoot > tr > td {
        border-bottom: .2ex solid #000;
    }
</style>
<div class="main-content">
    {% set i=1 %}
    {% for order in vehicle.deliveries.orders %}
    <div class="modal-body" style="{{ i%3!=0?'margin-bottom: 80px':''  }}">
        <div class="row">
            <table width="100%" class="table table-full-width">
                <tr>
                    <td class="col-md-6" style="vertical-align: top; width: 60%">
                        <h3 style="padding: 0;margin: 0">NOURISH POULTRY & HATCHERY LTD</h3>
                        <p style="padding: 5px 0;margin: 0"><strong>Hatchery:</strong> {{ vehicle.depo.description|nl2br  }}
                        </p>
                        <p style="padding: 5px 0;margin: 0">Head Office: 39, Takia Center, Sector # 07, Uttara, Dhaka.</p>
                        <p style="padding: 5px 0;margin: 0">Tel: 7913023-27, Fax: 7913022, Web: www.nourish.com.bd</p>
                    </td>
                    <td class="col-md-6" style="vertical-align: middle; width: 40%">
                        <h4><strong>Challan: {{ order.id }} / {{ order.deliveries[0].id }}</strong></h4>
                        <p><strong>Date: {{ order.createdAt|date('d-m-Y') }}</strong></p>
                    </td>
                </tr>
            </table>

            <div class="col-md-12">
                <div class="portlet">
                    <div class="portlet-title">
                        <table width="100%" class="table" style="margin-bottom: 0">
                            <tr>
                                <td width="50%" style="border: none"><div class="col-md-6" style="text-align: center"><div class="caption" style="font-size: 18px;line-height: 18px;padding: 10px 0;"><strong>INVOICE HATCHERY</strong></div></div></td>
                                <td width="50%" style="border: none"><div class="col-md-6"><div class="caption" style="font-size: 18px;line-height: 18px;padding: 10px 0;"><strong>{{ vehicle.depo.name  }}</strong></div></div></td>
                            </tr>
                        </table>


                    </div>
                    <div class="portlet-body">
                        <table cellpadding="5px" border="1" collapse="0" cellspacing="0" width="100%" class="table table-bordered">
                            <thead>
                            <tr>
                                <td style="border-top: .2ex solid #000; vertical-align: middle" colspan="10"><strong>Name & Address: {{ order.agent.user.profile.fullName }}, {{ order.agent.user.profile.address|default('') }}, {{ order.agent.user.upozilla.name|default('') }}, {{ order.agent.user.zilla.name|default('') }}; Mobile No: {{ order.agent.user.profile.cellphoneForMapping }}</strong></td>
                            </tr>
                            <tr>
                                <th>SL. No.</th>
                                <th>Item</th>
                                <th>Actual (Qty)</th>
                                <th>Bonus (Qty)</th>
                                <th>Rate (MRP)</th>
                                <th>Amount (Tk.)</th>
                            </tr>
                            </thead>
                            <tbody class="orderItems">
                            {% set totalQuentity = 0 %}
                            {% set totalDeliveredQuantity = 0 %}
                            {% set totalBonus = 0 %}
                            {% set totalDamageQuantity = 0 %}
                            {% set totalAmount = 0 %}

                                {% for index, item in order.orderItems %}
                                    {% if item.quantity != 0 %}
                                        {% set totalQuentity= totalQuentity + item.quantity %}
                                        {% set partialQty=0 %}
                                        {% if order.id in partialItems|keys %}
                                            {% set partialQty = partialItems[order.id][item.id]['delivered'] %}
                                        {% endif %}
                                        {% set totalDeliveredQuantity= totalDeliveredQuantity + partialQty %}
                                        {% set totalBonus= totalBonus + item.bonusQuantity %}
                                        {% set totalDamageQuantity= totalDamageQuantity + item.damageQuantity %}
                                        {% set totalAmount= totalAmount+(partialQty*item.mrpPrice) %}
                                            <tr>
                                                <td>{{ index+1 }}</td>
                                                <td>{{ item.item.getItemCodeName }}</td>

                                                <td align="right" class="deliver">
                                                    {{ partialQty }}
                                                </td>
                                                <td align="right">{{item.bonusQuantity }}</td>
                                                <td align="right">{{ item.mrpPrice }}</td>

                                                <td align="right">{{partialQty*item.mrpPrice }}</td>
                                            </tr>
                                    {% endif %}
                                {% endfor %}

                            </tbody>
                                <tr style="font-weight: bold" class="bold">
                                    <td></td>
                                    <td class="bold">Total</td>
                                    <td align="right">{{ totalDeliveredQuantity }}</td>
                                    <td align="right">{{ totalBonus }}</td>
                                    <td></td>
                                    <td align="right">{{ totalAmount }}</td>
                                </tr>
                        </table>
                        <table width="100%" class="table" style="margin-bottom: 0">

                            <tr>
                                <td style="height: 35px; border: none">Contract No.</td>
                                <td rowspan="2" style="text-align: left; border: none">Delivery By:</td>
                            </tr>
                            <tr>
                                <td style="border: none">Money Receipt No.</td>
                            </tr>

                        </table>

                    </div>
                    {#<input type="hidden" id="delivery-id" name="delivery-id" value="{{ delivery.id }}">#}
                </div>
            </div>
        </div>
    </div>
        {% if i%3==0 and not loop.last %}
        <div style="page-break-after: always"></div>
        {% endif %}
    {% set i=i+1 %}
    {% endfor %}
</div>

